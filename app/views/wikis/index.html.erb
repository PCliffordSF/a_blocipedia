 <h1>All Wikis</h1>

 <div class="row">
   <div class="col-md-8">

     <% @wikis.each do |wiki| %>
     
     <% if index_view wiki %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">

             <%= link_to wiki.title, wiki %>
           </h4>
           <small>
             <%= wiki.body %> </br>
           </small>
           <small>
             <% if wiki.private == true %>
             <small>Private Wiki</small>
             <% else %>
             <small>Public Wiki</small>
             <% end %>
             <%= link_to "Edit Wiki", edit_wiki_path(wiki), class: 'btn-xs btn-success' %>
           </small>
         </div>
       </div>
       <% end %>
     <% end %>
     </br>
     <%= link_to "Exit", welcome_index_path, class: 'btn btn-warning' %>
   </div>
 </div>