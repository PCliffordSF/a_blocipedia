 <div>
   <h1><%= @wiki.title %></h1><br>
     <small>
       submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.email %>
     </small>
 </div>
 <div class="row">
   <div class="col-md-8">
     <p><%= @wiki.body %></p>
     <% if @wiki.private == true && current_user.premium? %>
     
     <div class="col-md-8">
      
      <%= form_tag wikis_add_collaborator_path do  %>
      <%= @wiki.id %>
      <%= hidden_field_tag 'wiki_id', @wiki.id %>
      <%= email_field_tag 'email', class: 'form-control', placeholder: "Enter email address" %>
      
      <%= submit_tag 'Tester Action', class: 'btn btn-success' %>
      <% end %>

      <br></br>
      </div> <br></br>
     <% end %>
   </div>
     <div class="col-md-8">
       <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
       <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete wiki?' } %>
       <%= link_to "Exit", root_path, class: 'btn btn-warning' %>
     </div>
     
 </div>
